						tr
							th
							th DESCRIPCIÓN
							th TOTAL
						tr
							td
								img(src="assets/img/opticlub-product-glasses.jpg", alt="OptiClub").img-responsive
							td
								h3
									b DISCOVERY 079
									| (DIS079-19)
								p
									| Precio Unitario $300.00
									| Color: Negro
									| Cantidad select
							td
								span $900
								img(src="assets/img/opticlub-trash-icon.png", alt="OptiClub").img-responsive
						tr
							td
								img(src="assets/img/opticlub-product-glasses.jpg", alt="OptiClub").img-responsive
